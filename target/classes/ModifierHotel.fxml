<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ModifierHotelController">
    <Label text="Modifier l'hôtel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label text="Nom:" />
    <TextField fx:id="tfNom" />
    <Label text="Ville:" />
    <TextField fx:id="tfVille" />
    <Label text="Prix par nuit:" />
    <TextField fx:id="tfPrixParNuit" />
    <Label text="Disponible (Oui/Non):" />
    <TextField fx:id="tfDisponible" />
    <Label text="Nombre d'étoiles:" />
    <TextField fx:id="tfNombreEtoile" />
    <Label text="Type de chambre:" />
    <TextField fx:id="tfTypeDeChambre" />
    <Button text="Modifier" onAction="#handleModifier" />
</VBox>