<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="1024.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ModifierClientController">
    <children>
       
        <StackPane layoutX="315.0" layoutY="86.0" prefHeight="468.0" prefWidth="393.0" styleClass="card">
            <VBox alignment="CENTER" spacing="14">
                <Label style="-fx-text-fill: #37B7C3; -fx-font-size: 24px;" text="Modifier compte" />
   
                <TextField fx:id="tfNom" promptText="Nom" />
                <TextField fx:id="tfPrenome" promptText="Prénom" />
                <TextField fx:id="tfMail" promptText="Mail" />
                <TextField fx:id="tfPasswor" promptText="Mot de passe" />
                <TextField fx:id="tfNum" promptText="N°tel" />
                <TextField fx:id="tfLieux" promptText="Adresse" />
   
                <HBox alignment="CENTER" spacing="12">
                    <Button fx:id="btnRetour" onAction="#handleRetour" text="Retour" />
                    <Button fx:id="btnModifier" onAction="#handleModifier" text="Modifier" />
                </HBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>
