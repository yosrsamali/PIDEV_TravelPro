<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="640.0" prefWidth="1024.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ModifierAdminController">
    <children>
        <StackPane layoutX="315.0" layoutY="86.0" prefHeight="468.0" prefWidth="393.0" styleClass="card">
            <VBox alignment="CENTER" spacing="14">
                <Label style="-fx-text-fill: #37B7C3; -fx-font-size: 24px;" text="Modifier compte" />

                <TextField fx:id="tfNom" promptText="Nom" />
                <Label fx:id="lblNomError" style="-fx-text-fill: red; -fx-font-size: 12px;" />

                <TextField fx:id="tfPrenom" promptText="Prénom" />
                <Label fx:id="lblPrenomError" style="-fx-text-fill: red; -fx-font-size: 12px;" />

                <TextField fx:id="tfMail" promptText="Mail" />
                <Label fx:id="lblMailError" style="-fx-text-fill: red; -fx-font-size: 12px;" />

                <TextField fx:id="tfPassword" promptText="Mot de passe" />
                <Label fx:id="lblPasswordStrength" style="-fx-font-size: 12px;" />
                <Label fx:id="lblPasswordError" style="-fx-text-fill: red; -fx-font-size: 12px;" />

                <TextField fx:id="tfRole" promptText="Rôle" />
                <Label fx:id="lblRoleError" style="-fx-text-fill: red; -fx-font-size: 12px;" />

                <HBox alignment="CENTER" spacing="12">
                    <Button fx:id="btnRetour" onAction="#handleRetour" text="Retour" />
                    <Button fx:id="btnModifier" onAction="#handleModifier" text="Modifier" />
                </HBox>
            </VBox>
        </StackPane>
    </children>
</AnchorPane>