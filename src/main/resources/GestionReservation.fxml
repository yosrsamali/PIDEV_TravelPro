<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ReservationController">
    <Label text="Formulaire de Réservation" layoutX="10" layoutY="10"/>

    <GridPane hgap="10" vgap="10" layoutX="10" layoutY="40">
        <Label text="Lieu de Départ:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="departureField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Lieu d'Arrivée:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="arrivalField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Date de Voyage:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="travelDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Date de Retour:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Ajouter Billet Avion" layoutX="10" layoutY="150" onAction="#handleAddFlightTicket"/>
    <HBox fx:id="flightTicketBox" visible="false" spacing="10" layoutX="10" layoutY="180">
        <Label text="Classe:"/>
        <ComboBox fx:id="classComboBox"/>
        <Label text="Compagnie Aérienne:"/>
        <TextField fx:id="airlineField"/>
    </HBox>

    <Button text="Ajouter Hôtel" layoutX="10" layoutY="220" onAction="#handleAddHotel"/>
    <HBox fx:id="hotelBox" visible="false" spacing="10" layoutX="10" layoutY="250">
        <Label text="Nom de l'Hôtel:"/>
        <TextField fx:id="hotelField"/>
    </HBox>

    <Button text="Ajouter Voiture" layoutX="10" layoutY="290" onAction="#handleAddCar"/>
    <HBox fx:id="carBox" visible="false" spacing="10" layoutX="10" layoutY="320">
        <Label text="Modèle de Voiture:"/>
        <TextField fx:id="carModelField"/>
    </HBox>

    <Button text="Valider la Réservation" layoutX="10" layoutY="360" onAction="#handleSubmitReservation"/>
</AnchorPane>