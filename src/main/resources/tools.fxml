<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.activiteC">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <TableView fx:id="activiteTableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nomColumn" text="Nom" />
            <TableColumn fx:id="descriptionColumn" prefWidth="266.0" text="Description" />
            <TableColumn fx:id="dateDebutColumn" prefWidth="124.0" text="Date Début" />
            <TableColumn fx:id="dateFinColumn" prefWidth="108.0" text="Date Fin" />
            <TableColumn fx:id="idEventColumn" prefWidth="147.0" text="ID Événement" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Nom:" />
        <TextField fx:id="nomActiviteInput" />
        <Label text="Description:" />
        <TextArea fx:id="descriptionInput" />
        <Label text="Date Début:" />
        <DatePicker fx:id="dateDebutInput" />
        <Label text="Date Fin:" />
        <DatePicker fx:id="dateFinInput" />
        <Label text="ID Événement:" />
        <TextField fx:id="idEventInput" />
    </HBox>

    <HBox spacing="10">
        <Button onAction="#addActivite" text="Ajouter" />
        <Button onAction="#updateActivite" text="Modifier" />
        <Button onAction="#deleteActivite" text="Supprimer" />
    </HBox>
</VBox>
