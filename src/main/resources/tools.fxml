<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.activiteC" stylesheets="@style.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TableView fx:id="activiteTableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nomColumn" text="Nom"/>
            <TableColumn fx:id="descriptionColumn" text="Description"/>
            <TableColumn fx:id="dateDebutColumn" text="Date Début"/>
            <TableColumn fx:id="dateFinColumn" text="Date Fin"/>
            <TableColumn fx:id="idEventColumn" text="ID Événement"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Nom:"/>
        <TextField fx:id="nomActiviteInput"/>
        <Label text="Description:"/>
        <TextArea fx:id="descriptionInput"/>
        <Label text="Date Début:"/>
        <DatePicker fx:id="dateDebutInput"/>
        <Label text="Date Fin:"/>
        <DatePicker fx:id="dateFinInput"/>
        <Label text="ID Événement:"/>
        <TextField fx:id="idEventInput"/>
    </HBox>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#addActivite"/>
        <Button text="Modifier" onAction="#updateActivite"/>
        <Button text="Supprimer" onAction="#deleteActivite"/>
    </HBox>
</VBox>