<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="483.0" prefWidth="1266.0" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.activiteC">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <TableView fx:id="activiteTableView" prefHeight="327.0" prefWidth="1064.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="nomColumn" prefWidth="203.0" text="Nom" />
            <TableColumn fx:id="descriptionColumn" prefWidth="309.0" text="Description" />
            <TableColumn fx:id="dateDebutColumn" prefWidth="142.0" text="Date Début" />
            <TableColumn fx:id="dateFinColumn" prefWidth="176.0" text="Date Fin" />
            <TableColumn fx:id="idEventColumn" minWidth="5.0" prefWidth="7.0" text="ID Événement" />
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Nom:" />
        <TextField fx:id="nomActiviteInput" />
        <Label text="Description:" />
        <TextArea fx:id="descriptionInput" />
        <Label text="Date Début:" />
        <DatePicker fx:id="dateDebutInput" />
        <Label text="Date Fin:" />
        <DatePicker fx:id="dateFinInput" />
        <Label text="ID Événement:" />
        <TextField fx:id="idEventInput" />
    </HBox>

    <HBox prefHeight="40.0" prefWidth="1236.0" spacing="10">
        <Button onAction="#addActivite" text="Ajouter" />
        <Button onAction="#updateActivite" text="Modifier" />
        <Button onAction="#deleteActivite" text="Supprimer" />
      <Button fx:id="retour" contentDisplay="CENTER" mnemonicParsing="false" onAction="#retourner" prefHeight="37.0" prefWidth="101.0" text="Retourner" textAlignment="CENTER" textFill="#a80e0e">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Button>
    </HBox>
</VBox>
