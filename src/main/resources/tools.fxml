<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="483.0" prefWidth="1266.0" spacing="10" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controller.activiteC">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Remplacement du FlowPane par un ScrollPane contenant un FlowPane -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
        <FlowPane fx:id="activiteFlowPane" hgap="10" prefHeight="327.0" prefWidth="1064.0" vgap="10">
            <!-- Les cartes seront ajoutées dynamiquement ici -->
        </FlowPane>
    </ScrollPane>

    <HBox spacing="10">
        <Label text="Nom:" />
        <TextField fx:id="nomActiviteInput" />
        <Label text="Description:" />
        <TextArea fx:id="descriptionInput" />
        <Label text="Date Début:" />
        <DatePicker fx:id="dateDebutInput" />
        <Label text="Date Fin:" />
        <DatePicker fx:id="dateFinInput" />
        <Label text="ID Événement:" />
        <TextField fx:id="idEventInput" />
    </HBox>

    <HBox spacing="10">
        <Label text="Rechercher par ID ou Nom:" />
        <TextField fx:id="searchInput" />
        <Button onAction="#searchActivite" text="Rechercher" />
    </HBox>

    <HBox spacing="10">
        <Label text="Filtrer par ID ou Nom:" />
        <TextField fx:id="filterInput" />
        <Button onAction="#filterActivite" text="Filtrer" />
    </HBox>

    <HBox spacing="10">
        <Button onAction="#sortById" text="Trier par ID" />
        <Button onAction="#sortByName" text="Trier par Nom" />
    </HBox>

    <HBox prefHeight="40.0" prefWidth="1236.0" spacing="10">
        <Button onAction="#addActivite" text="Ajouter" />
        <Button onAction="#updateActivite" styleClass="modifier-button" text="Update" />

        <Button onAction="#refreshActivites" text="Rafraîchir" />
        <Button fx:id="retour" contentDisplay="CENTER" mnemonicParsing="false" onAction="#retourner" prefHeight="37.0" prefWidth="117.0" text="Retourner" textAlignment="CENTER" textFill="#a80e0e">
            <font>
                <Font name="System Italic" size="12.0" />
            </font>
        </Button>
    </HBox>
</VBox>