<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>

<?import javafx.collections.FXCollections?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.AddReservationController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="500">

    <Label text="New Reservation" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Departure City:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="departureField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Arrival City:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="arrivalField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Travel Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="travelDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Return Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Class:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="classComboBox" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Economy"/>
                    <String fx:value="Business"/>
                    <String fx:value="First Class"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <Button fx:id="searchButton" text="Search Flights" onAction="#searchFlights"/>

    <ListView fx:id="flightsListView" prefHeight="150"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="saveButton" text="Save Reservation" onAction="#saveReservation" disable="true"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>

</VBox>