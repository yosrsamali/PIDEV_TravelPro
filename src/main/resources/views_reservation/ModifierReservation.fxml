<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.controllers_reservation.ModifierReservationController">
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
    <children>
        <!-- Titre -->
        <Label layoutX="200.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Modifier une Réservation" />

        <!-- Affichage des informations (lecture seule) -->
        <Label layoutX="50.0" layoutY="70.0" text="Voiture:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <Label fx:id="lblIdVoiture" layoutX="150.0" layoutY="70.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>

        <Label layoutX="50.0" layoutY="110.0" text="Billet Avion:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <Label fx:id="lblIdBilletAvion" layoutX="150.0" layoutY="110.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>

        <Label layoutX="50.0" layoutY="150.0" text="Hôtel:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <Label fx:id="lblIdHotel" layoutX="150.0" layoutY="150.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>

        <Label layoutX="50.0" layoutY="190.0" text="Client:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <Label fx:id="lblIdClient" layoutX="150.0" layoutY="190.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>

        <!-- Champ modifiable pour le statut -->
        <Label layoutX="50.0" layoutY="230.0" text="Statut:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Label>
        <TextField fx:id="tfStatut" layoutX="150.0" layoutY="230.0" promptText="Statut" />

        <!-- Bouton Modifier -->
        <Button layoutX="250.0" layoutY="280.0" onAction="#modifierReservation" text="Modifier" />
    </children>
</AnchorPane>
