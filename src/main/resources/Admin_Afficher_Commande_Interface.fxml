<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" styleClass="root" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.CommandeController">

    <children>

        <!-- Go Back Button -->
        <Button fx:id="btnGoToAdminMainInterface" layoutX="20" layoutY="20" styleClass="button" text="← Back" />

        <!-- Main Container -->
        <VBox layoutX="194.0" layoutY="40.0" prefHeight="640.0" prefWidth="990.0" spacing="20" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Title -->
            <Label styleClass="title-label" text="Gestion des Commandes" />

            <!-- Command Table -->
            <TableView fx:id="commandTable" prefHeight="550" prefWidth="860" styleClass="table">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="150" text="Command ID" />
                    <TableColumn fx:id="clientIdColumn" prefWidth="200" text="Client ID" />
                    <TableColumn fx:id="dateColumn" prefWidth="250" text="Date" />
                    <TableColumn fx:id="totalColumn" prefWidth="200" text="Montant Total" />
                    <TableColumn fx:id="statusColum" prefWidth="150" text="Statut" />
                </columns>
            </TableView>

        </VBox>

    </children>

</AnchorPane>
