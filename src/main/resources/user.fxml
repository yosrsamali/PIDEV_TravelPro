<AnchorPane prefHeight="640.0" prefWidth="1024.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.GestionUtulisateur">
   <children>
      <ImageView fitHeight="311.0" fitWidth="440.0" layoutX="39.0" layoutY="145.0">
         <image>
            <Image url="@images/plane.png" />
         </image>
      </ImageView>
      <StackPane layoutX="563.0" layoutY="66.0" prefHeight="468.0" prefWidth="393.0" styleClass="card">
         <VBox alignment="CENTER" spacing="14">
            <Label style="-fx-text-fill: #37B7C3; -fx-font-size: 24px;" text="Créer compte" />

            <TextField fx:id="tfNom" promptText="Nom" />
            <TextField fx:id="tfPrenome" promptText="Prenome" />
            <TextField fx:id="tfMail" promptText="Mail" />
            <TextField fx:id="tfPassword" promptText="Mot de passe" />
            <Label alignment="CENTER_LEFT" style="-fx-alignment: CENTER-LEFT;" text="Role" />
