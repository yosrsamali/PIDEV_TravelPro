<children>
    <!-- Image d’arrière-plan -->


    <ImageView fitHeight="311.0" fitWidth="440.0" layoutX="39.0" layoutY="145.0">
        <image>
            <Image url="@images/plane.png" />
        </image>
    </ImageView>

    <!-- Carte du formulaire -->
    <StackPane layoutX="581.0" layoutY="134.0" prefHeight="311.0" prefWidth="394.0" styleClass="card">
        <VBox alignment="CENTER" spacing="14">
