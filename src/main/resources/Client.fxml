                <Button fx:id="btnAjouter" onAction="#Add" text="Ajouter" />
                            </HBox>
        </VBox>
    </StackPane>
    <Button fx:id="btnRetour" layoutX="32.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleRetour">
        <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0">
                <image>
                    <Image url="@images/back_arrow.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
    <Label layoutX="67.0" layoutY="583.0" maxWidth="400.0" style="-fx-text-fill: #e9e9e9; -fx-font-weight: lighter;" textAlignment="CENTER" wrapText="true" />
</children>
