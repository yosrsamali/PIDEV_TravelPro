<AnchorPane prefHeight="640.0" prefWidth="1024.0" stylesheets="@style2.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.GestionClient">
    <children>
        <!-- Image d’arrière-plan -->
        <ImageView fitHeight="640.0" fitWidth="512.0">
            <image>
                <Image url="@images/motive.png" />
            </image>
        </ImageView>

        <!-- Carte du formulaire -->
        <StackPane layoutX="581.0" layoutY="134.0" prefHeight="311.0" prefWidth="394.0">
            <VBox alignment="CENTER" spacing="14">
                <Label style="-fx-text-fill: #37B7C3; -fx-font-size: 24px;" text="Créer Client" />

                <!-- Champ d'adresse -->
                <TextField fx:id="tfAddress" promptText="Address" />
                <Label fx:id="lblAddressError" style="-fx-text-fill: red; -fx-font-size: 12px; -fx-font-family: 'Arial'; -fx-font-weight: lighter;" />

                <!-- Champ de téléphone -->
                <TextField fx:id="tfTel" promptText="N°tel" />
                <Label fx:id="lblTelError" style="-fx-text-fill: red; -fx-font-size: 12px; -fx-font-family: 'Arial'; -fx-font-weight: lighter;" />

                <!-- Bouton Ajouter -->
                <Button fx:id="btnAjouter" onAction="#Add" text="Ajouter" />
            </VBox>
        </StackPane>

        <!-- Retour -->
        <ImageView fx:id="imgRetour" fitHeight="20.0" fitWidth="20.0" layoutX="38.0" layoutY="35.0" onMouseClicked="#handleRetour">
            <image>
                <Image url="@images/back_arrow.png" />
            </image>
        </ImageView>

        <!-- Description -->
        <Label layoutX="67.0" layoutY="583.0" maxWidth="400.0" style="-fx-text-fill: #e9e9e9; -fx-font-weight: lighter;" textAlignment="CENTER" wrapText="true" />
        <ImageView fitHeight="135.0" fitWidth="146.0" layoutX="878.0">
            <image>
                <Image url="@images/logo.png" />
            </image>
        </ImageView>
        <Label layoutX="594.0" layoutY="482.0" maxWidth="373.0" prefHeight="79.0" prefWidth="373.0" style="-fx-text-fill: #686D76; -fx-font-size: 12px; -fx-wrap-text: true;" text="Lorsque vous cliquez sur le bouton Ajouter, un e-mail de vérification est envoyé à votre adresse e-mail. Veuillez consulter votre boîte de réception et copier le code de vérification. Ensuite, collez ce code dans l'écran suivant pour finaliser votre inscription." textAlignment="CENTER" />
    </children>
</AnchorPane>
