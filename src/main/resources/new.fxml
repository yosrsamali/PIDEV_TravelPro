<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="borderPane" xmlns="http://javafx.com/javafx/8" >
    <!-- Header Section -->
    <top>
        <HBox prefHeight="100" style="-fx-background-color: blue; -fx-padding: 10;">
            <Button text="Home" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Button text="About" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
            <Button text="Contact" style="-fx-font-size: 16px; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Body Section -->
    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-background-color: green; -fx-padding: 20;">
            <Button text="Button 1" style="-fx-font-size: 18px;"/>
            <Button text="Button 2" style="-fx-font-size: 18px;"/>
            <Button text="Button 3" style="-fx-font-size: 18px;"/>
        </VBox>
    </center>
</BorderPane>
