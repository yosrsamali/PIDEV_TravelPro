<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" styleClass="root" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.AjouterProduit_Panier">

    <!-- Main Card Container -->
    <VBox alignment="CENTER" layoutX="173.0" layoutY="23.0" prefHeight="674.0" prefWidth="1012.0" spacing="30" styleClass="card">
        <padding>
            <Insets bottom="50" left="50" right="50" top="40" />
        </padding>

        <!-- Header -->
        <Label styleClass="title-label" text="Shop - Available Products" />

        <!-- TableView -->
        <TableView fx:id="productTableView" maxWidth="-Infinity" prefHeight="514.0" prefWidth="893.0" VBox.vgrow="NEVER">
            <columns>
                <TableColumn fx:id="colNomProduit" prefWidth="250.0" text="Product Name" />
                <TableColumn fx:id="colPrixAchat" prefWidth="169.0" text="Price" />
                <TableColumn fx:id="colQuantite" prefWidth="290.0" text="Quantity" />
                <TableColumn fx:id="colAction" prefWidth="182.0" text="Action" />
            </columns>
        </TableView>
   
        <!-- Back Button -->
        <Button fx:id="btnBack" prefWidth="200.0" styleClass="button" text="Back to Main" />

    </VBox>

</AnchorPane>
