<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.controllerAvis.Listreponse">
   <children>
      <!-- Title label for the Reponses list -->
      <Label layoutX="229.0" layoutY="15.0" text="Liste de Réponse" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <!-- Label to display Avis details -->
      <Label fx:id="avisLabel" layoutX="20.0" layoutY="50.0" prefWidth="560.0" style="-fx-font-size: 14px;" />

      <!-- HBox to display the rating as stars -->
      <HBox fx:id="ratingBox" layoutX="20.0" layoutY="90.0" spacing="5">
         <!-- Les étoiles seront ajoutées dynamiquement ici -->
      </HBox>

      <!-- VBox to display list of Reponses -->
      <VBox fx:id="reponsesVBox" layoutX="20.0" layoutY="150.0" spacing="10.0" prefWidth="560.0">
      </VBox>
   </children>
</AnchorPane>