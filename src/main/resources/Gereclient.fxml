               <Button fx:id="btnAjouter3" onAction="#Verclient" text="Demande Admin2" />
               <Button mnemonicParsing="false" onAction="#handleModifier" text="Modifier2" />
            </HBox>
         </VBox>
      </ScrollPane>
   </top>

   <left>
      <AnchorPane BorderPane.alignment="CENTER" />
   </left>

   <center>
      <ScrollPane fitToWidth="true" fitToHeight="true" prefViewportHeight="200" prefWidth="1024.0">

      <fx:include source="ListeDemande.fxml"/>
      </ScrollPane>
