<BorderPane prefHeight="640.0" prefWidth="1024.0" stylesheets="@style2.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Controllers.contolleruser.Gereclient">

   <!-- Header Section -->
   <top>
      <ScrollPane fitToWidth="true" fitToHeight="true" prefViewportHeight="100" prefWidth="1024.0">
         <VBox  style="    -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 10, 0, 0, 5);-fx-background-color:linear-gradient(to bottom, #ffffff, #ffffff); -fx-padding: 10;">
            <HBox spacing="50"  >
               <HBox spacing="600" >
               <HBox alignment="TOP_LEFT" spacing="10">
                  <ImageView fx:id="profileImageView" fitHeight="60.0" fitWidth="60.0">
                     <clip>
                        <Circle centerX="30.0" centerY="30.0" radius="30.0" />
                     </clip>
                  </ImageView>

                  <VBox alignment="CENTER_LEFT" spacing="5">
                     <HBox spacing="5">
                        <Label fx:id="lblNom" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="AYOUB" />
                        <Label fx:id="lblPrenom" style="-fx-font-size: 20px; -fx-font-weight: bold;-fx-text-fill: #000000;" text="Belgacem" />
                     </HBox>

                        <Hyperlink  onAction="#EnvoyerDemende" text="Envoyer demende " style="-fx-font-size: 16px;"/>


                  </VBox>
               </HBox>

              <HBox alignment="CENTER_RIGHT" spacing="10">
                 <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#Deconnection">
                    <image>
                       <Image url="@images/arrow_entrance_exit_internet_log_out_security_icon_127059.png" />
                    </image>
                 </ImageView>
               <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#handleModifier">
                  <image>
                     <Image url="@images/1486564394-edit_81508.png" />
                  </image>
               </ImageView>

               <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#handleSupprimer">
                  <image>
                     <Image url="@images/1491313938-close_82982.png" />
                  </image>
               </ImageView>
            </HBox>
               </HBox>

            </HBox>

              <!-- Section avec les nouveaux boutons sous la premiÃ¨re VBox -->
              <HBox alignment="TOP_CENTER" spacing="10">
